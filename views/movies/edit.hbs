{{#with document}}
  <form action="/movies/{{_id}}" method="POST">
    <label for="title-input">Movie Title</label>
    <input id="title-input" type="text" name="title" placeholder="{{title}}"/>
    
    <label for="genre-input">Movie Genre</label>
    <input id="genre-input" type="text" name="genre" placeholder="{{genre}}"/>
    
    <label for="plot-input">Movie Plot</label>
    <input id="plot-input" type="text" name="plot" placeholder="{{plot}}"/>
  
    <button>Edit</button>
  </form>
{{/with}}